# my_rviz_config.rviz

VisualizationManager:
  FixedFrame: "map"

  Displays:
    - Name: "Map"
      Enabled: true
      Type: "rviz2/Map"
      Topic: "/map"

    - Name: "RobotModel"
      Enabled: true
      Type: "rviz2/RobotModel"
      RobotDescription: "robot_description"

    - Name: "LaserScan"
      Enabled: true
      Type: "rviz2/LaserScan"
      Topic: "/scan"
